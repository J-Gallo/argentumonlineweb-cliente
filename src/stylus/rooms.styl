@import 'nib'
#modalPassword
	margin-left -250px
	margin-top -100px
	position fixed 
	left 50% 
	z-index 15 
	width 300px
	background #0b0f13
	padding 1px
	display none
	.shadow
		box-shadow inset 0 0 10px #555657 
		width 100%
		height 100%
		padding 20px
		padding-top 10px
		width 260px
		float left
		.header
			width 100%
			float left
			.closeWindow
				float right
				color #ff9000
				cursor pointer
		.groupInput
			float left
			label
				color #496076
				float left
				margin-top 3px
				margin-right 10px
				margin-top 10px
			.inputText
				float left
				width 247px
				height 20px
				background-color #0b0f13
				border-color #151C23
				border none
				color #525252
				margin-top 5px
				padding-left 10px
				border 1px solid #1a242d
				background-color black
				font-size 15px
		.createRoom
			color #ff9000
			text-align center
			background #0d1317
			cursor pointer
			padding 5px 10px
			border 1px solid #1a242d
			float left
			margin-top 10px
			margin-left 81px

.contentBox
	padding 10px !important
	width 556px !important
	.createRoom
		color #ff9000
		text-align center
		background #0d1317
		cursor pointer
		padding 10px 0
		border 1px solid #1a242d
		margin-bottom 10px
	.tableHeader
		background #0d1317
		color #ff9000
		float left
		text-align center
		border 1px solid #1a242d
		.li
			float left
			padding 5px 0
			border-left 1px solid #1a242d
		.nameRoom
			width 251px
			border-left 0
		.playersRoom
			width 100px
		.passRoom
			width 40px
		.lvlMaxRoom
			width 120px
		.inspectRoom
			width 39px
			height 18px
	.row
		color #ff9000
		float left
		text-align center
		border 1px solid #1a242d
		border-top 0
		.li
			float left
			padding 5px 0
			border-left 1px solid #1a242d
			color #496076
		.nameRoom
			width 251px
			border-left 0
		.playersRoom
			width 100px
		.passRoom
			width 40px
		.lvlMaxRoom
			width 120px
		.inspectRoom
			width 39px
			height 18px
		&:hover
			cursor pointer
			background #111d1d